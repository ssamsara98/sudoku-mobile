root = true

[*]
charset = utf-8
indent_style = space
indent_size = tab
tab_width = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{js,jsx,ts,tsx,vue}]
quote_type = single

[*.{env,env.local,env.*.local}]
insert_final_newline = false
